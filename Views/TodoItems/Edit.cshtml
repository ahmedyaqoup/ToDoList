<div>
	<h1>
		
		Edit Items
	</h1>
</div>
<form action="/TodoItems/Edit" method="post">
	<div class="my-3">
		<input type="hidden" name="personId" value="@Model.Id" />
	</div>
	<div class="my-3">
		<input type="text" class="form-control" name="title" value="@Model.Title" />
	</div>
	<div class="my-3">
		<input type="text" class="form-control" name="description" value="@Model.Description" />
	</div>
	<div class="my-3">
		<input type="datetime-local" class="form-control" name="deadline" value="@Model.DeadLine" />
	</div>
	<button type="submit" class="btn btn-info">Save Edit</button>
</form>
