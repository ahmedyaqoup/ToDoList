<div>
	<h1>
		
		Create New Items:
	</h1>
</div>
<form action="/TodoItems/Create" method="post">


	<div class="my-3">
		<input type="text" class="form-control" font-size: 25px; name="title" placeholder="Title" />
	</div>
	<div class="my-3">
		<input type="text" class="form-control" font-size: 25px;" name="description" placeholder="Description" />
	</div>
	<div class="my-3">
		<input type="datetime-local" class="form-control" font-size: 25px;" name="deadline" placeholder="Deadline" />

	</div>

	<button style="width:200px" type="submit" class="btn btn-info"><h3>Create</h3></button>

</form>